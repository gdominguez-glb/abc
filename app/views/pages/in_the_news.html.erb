<div class="row">
  <div class="col-sm-10 col-sm-offset-1 margin-top--l margin-bottom--xl">
    <div class="row">
      <% @in_the_news.each do |in_the_new| %>
        <div class="col-sm-12">
          <h2><%= in_the_new.title %></h2>
          <h4><%= in_the_new.author %>, <%= in_the_new.publisher %> - <%= in_the_new.article_date %></h4>
          <p><%= in_the_new.description.html_safe %></p>
          <p>Link: <%= in_the_new.call_to_action_button_link %></p>
          <p>Image: <%= in_the_new.image_url %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
