<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="page-header">
      <h1>Meet the Team</h1>
    </div>
  </div>
</div>
<%= render 'tabs' %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <% @staffs.each do |staff| %>
        <div class="col-sm-6 col-md-3 col-thumbnail">
          <div data-toggle="modal"
              data-target="#staffModal"
              data-bio="<%= staff.description rescue nil %>"
              data-title="<%= staff.title %>">
            <div class="thumbnail thumbnail-modal"
              data-toggle="tooltip"
              title="Click for bio">
                <% if staff.picture.exists? %>
                  <%= image_tag staff.picture.url, class: 'img-square' %>
                <% else %>
                  <img src="http://gm-s3-qa.intridea.com/staffs/pictures/000/000/002/original/fillmurray-325x325.jpg" class="img-square" alt="" />
                <% end %>
                <div class="caption">
                  <h3><%= staff.name %></h3>
                  <p><em><%= staff.title %></em></p>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal" id="staffModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $(document).ready(function(){
    $('.tooltip-trigger').hover(function(e) {
      $(this).tooltip('show');
    });

    $('#staffModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var title = button.data('title');
      var bio = button.data('bio');

      var modal = $(this);
      modal.find('.modal-title').text(title);
      modal.find('.modal-body').html(bio);
    });
  });
<% end %>
