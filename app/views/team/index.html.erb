<div class="row no-gutter">
  <div class="col-sm-10 col-sm-offset-1">
    <img src="http://gm-s3-qa.intridea.com/documents/attachments/000/000/005/original/staff-hero.png?1443624976" class="img-responsive">
  </div>
</div>
<%= render 'tabs' %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h5 class="margin-top margin-bottom-xl">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</h5>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <% @staffs.each do |staff| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <img src="<%= staff.picture.url %>" class="img-circle" data-toggle="modal" data-target="#bio<%= staff.id %>" alt="" />
            <div class="caption">
              <h3><%= staff.name %></h3>
              <p><em><%= staff.title %></em></p>
            </div>
            <div class="modal fade" id="bio<%= staff.id %>">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title"><%= staff.title %></h4>
                  </div>
                  <div class="modal-body">
                    <%= staff.description.html_safe rescue nil %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
