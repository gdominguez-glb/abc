<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="page-header">
      <h1>Meet the Team</h1>
    </div>
  </div>
</div>
<%= render 'tabs' %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <% @staffs.each do |staff| %>
        <div class="col-sm-6 col-md-3 col-thumbnail">
          <div class="thumbnail tooltip-trigger"
            data-toggle="tooltip"
            title="Click for bio">
            <div
              data-toggle="modal"
              data-target="#bio<%= staff.id %>">
              <% if staff.picture.exists? %>
                <%= image_tag staff.picture.url, class: 'img-square' %>
              <% else %>
                <img src="http://gm-s3-qa.intridea.com/staffs/pictures/000/000/002/original/fillmurray-325x325.jpg" class="img-square" alt="" />
              <% end %>
              <div class="caption">
                <h3><%= staff.name %></h3>
                <p><em><%= staff.title %></em></p>
              </div>
            </div>
            <div class="modal fade" id="bio<%= staff.id %>">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title"><%= staff.title %></h4>
                  </div>
                  <div class="modal-body">
                    <%= staff.description.html_safe rescue nil %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_tag do %>
  $(function() {
    $('.tooltip-trigger').hover(function(e) {
      $(this).tooltip('show');
    });
  });
<% end %>
