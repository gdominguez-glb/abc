<!DOCTYPE html>
<html>
  <head>
    <title>GreatMinds <%= "- #{@page_title}" if @page_title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8">
    <%= display_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller_name %> <%= 'with-subnav' if @sub_nav_items.present? %> <%= yield :body_class %>" data-page="<%= @page.group_name if @page.present? %>">

    <%= render 'browser_detect' %>

    <div id="wrap" class="<%= 'empty-state' if @video_products.blank? %>">
      <%= render 'header' %>
      <div class="container container-content">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 margin-top-xl">
            <%= render 'flashes' %>
          </div>
        </div>
        <%= yield %>
      </div>
    </div>
    <%= render 'footer' %>
    <div class="overlay"></div>
    <%= yield :javascripts %>
  </body>
</html>
