<!DOCTYPE html>
<html>
  <head>
    <title>GreatMinds <%= "- #{@page_title}" if @page_title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0">
    <META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8">
    <%= favicon_link_tag 'favicon-128.png' %>
    <%= display_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= render 'google_fonts_inline' %>
    <%= csrf_meta_tags %>
  </head>
  <% cache [controller_name, @page] do %>
    <body class="<%= controller_name %> <%= 'with-subnav' if @sub_nav_items.present? %> <%= yield :body_class %> <%= (@page && @page.tiles) ? 'has-tiles' : 'no-tiles' %>" data-page="<%= @page.group_name if @page.present? %>">
  <% end %>

    <%= render 'google_tag_manager' if Rails.env.production? %>
    <%= render 'browser_detect' %>

    <div id="wrap" class="<%= 'empty-state' if @video_products.blank? %>">
      <%= render 'header' %>
      <div class="container container-content">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1" style="min-height: 0">
            <%= render 'flashes' %>
          </div>
        </div>
        <%= yield %>
      </div>
    </div>

    <% cache :footer, expires_in: 2.hours do %>
      <%= render 'footer' %>
    <% end %>

    <div class="overlay"></div>
    <%= yield :javascripts %>
    <%= render 'jira_ticket' %>
  </body>
</html>
