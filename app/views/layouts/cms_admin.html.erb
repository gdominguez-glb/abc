<!DOCTYPE html>
<html>
<head>
  <title>Great Minds</title>
  <%= favicon_link_tag 'favicon-128.png' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= render 'google_fonts_inline' %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller_name %>">
  <div id="wrap" class="cms-wrapper">
    <%= render 'header' %>
    <div class="container container-content">
      <div id="viewport" class="row">
        <div class="col-sm-10 col-sm-offset-1 margin-top--xxl margin-bottom--xl">
          <%= render 'flashes' %>
          <div class="row">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= render 'footer' %>
    <%= yield :javascripts %>
  </div>

</body>
</html>
