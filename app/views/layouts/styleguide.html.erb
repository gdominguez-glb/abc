<!-- This is the layout that the styleguide uses.
The actual body is stored in `:body`, and Styleguide stylesheets
are in `:head`.
You may customize this by adding your own scripts and styles. -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>Styleguides</title>
    <link rel="shortcut icon" type="image/x-icon" href="/assets/favicon-128.png" />
    <!--[if lt IE 9]
      <script src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6/html5shiv.min.js"></script>
    -->
    <%= yield :head  if content_for?(:head) %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'styleguide/prettify.css', media: 'all' %>

    <%= javascript_include_tag 'styleguide/jquery.min.js' %>
    <%= javascript_include_tag 'styleguide/bootstrap.min.js' %>
    <%= javascript_include_tag 'styleguide/prettify.js' %>
    <%= javascript_include_tag 'styleguide/select2.js' %>

    <%= javascript_include_tag 'styleguide/polyfills.js' %>
    <%= render 'google_fonts_inline' %>
  </head>
  <body>
    <%= yield :body  if content_for?(:body) %>
  </body>
</html>
