<% if @careers_page %>
  <%= @careers_page.body.html_safe %>
<% end %>
<% if !@jobs.blank? %>
<div class="row margin-top-xl">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="list-group">
      <% @jobs.each do |job| %>
        <%= link_to job.title, job_path(job), class: 'list-group-item' %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
<div class="row  margin-top-xl margin-bottom-xxl">
  <div class="col-sm-10 col-sm-offset-1">
    <p>Great Minds is an equal opportunity employer.</p>
  </div>
</div>