<div class="container">
  <div>
    <h3><%= @job.title %></h3>
    <p><%= @job.content.html_safe %></p>
  </div>

  <%= link_to 'Back to Careers', jobs_path %>
</div>

<script type="text/javascript">
  $(function() {
    var content = $('.container-content');
    content.find('div:empty, p:empty, br').remove();
    content.find('span, font').contents().unwrap();
  });
</script>
