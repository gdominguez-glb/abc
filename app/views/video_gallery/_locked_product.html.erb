<div class="video-product-wrapper col-lg-4 locked-product">
  <div class="clearfix">
    <div class="video-product-image-wrapper">
      <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
    </div>
  </div>
  <h6 class="video-product-name"><%= truncate(video_product.name, length: 50) %></h6>
  <div class="video-product-categories"><%= video_product.categories.join(", ") %></div>
  <div class="video-product-taxons"><%= video_product.taxons.map(&:name).join(", ") %></div>
  <div class="video-product-drawer">
    <button class="btn btn-default disabled" style="display: block;">Subscription Required</button>
    <div class="product-description">
      <%= truncate video_product.description, length: 100 %>
      <% if video_product.description && video_product.description.length > 100 %>
        <%= link_to 'MORE INFO', show_description_video_gallery_path(video_product), remote: true, class: 'more-info' %>
      <% end %>
    </div>
    <%= link_to spree.product_path(video_product), class: 'btn btn-primary unblock-button', style: 'display: block;' do %>
      Unlock Content
    <% end %>
  </div>
</div>
