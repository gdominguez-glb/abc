<div class="col-md-4">
  <div class="video-product-wrapper locked-product">
    <div class="video-product-image-wrapper">
      <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
    </div>
    <span class="video-product-name">
      <%= truncate(video_product.name, length: 50) %>
    </span>
    <div class="video-product-grade"><%= video_product.grade.try(:name) %></div>
    <div class="video-product-curriculum"><%= video_product.curriculum.try(:name) %></div>
    <div class="video-product-drawer hide">
      <button class="btn btn-default disabled" style="display: block;">Subscription Required</button>
      <%= truncate video_product.description, length: 100 %>
      <% if video_product.description && video_product.description.length > 100 %>
        <%= link_to 'MORE INFO', show_description_video_gallery_path(video_product), remote: true, class: 'more-info' %>
      <% end %>
      <%= link_to '#', class: 'btn btn-primary', style: 'display: block;' do %>
        Unlock Content
      <% end %>
    </div>
  </div>
</div>
