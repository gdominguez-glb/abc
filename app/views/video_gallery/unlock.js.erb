<% if @video.products_to_buy.length == 1 %>
  window.location.href = "<%= spree.product_path(@video.products_to_buy.first) %>";
<% else %>
  $('body').append("<%= escape_javascript(render 'choose_products_modal') %>");
  $('#choose-products-modal').modal('show');
  $('#choose-products-modal').on('hidden.bs.modal', function (e) {
    $('#choose-products-modal').remove();
  });
<% end %>
