<% if $flipper[:video_redesign].enabled? %>
  <% if video.is_free? || bought_products?(video.products) %>
    <% cache [video, :open], expires_in: 2.hours do %>
      <%= render partial: 'open_video_new', locals: { video: video } %>
    <% end %>
  <% else %>
    <% cache [video, :lock], expires_in: 2.hours do %>
      <%= render partial: 'locked_video_new', locals: { video: video } %>
    <% end %>
  <% end %>
<% else %>
  <% if video.is_free? || bought_products?(video.products) %>
    <% cache [video, :open], expires_in: 2.hours do %>
      <%= render partial: 'open_video_old', locals: { video: video } %>
    <% end %>
  <% else %>
    <% cache [video, :lock], expires_in: 2.hours do %>
      <%= render partial: 'locked_video_old', locals: { video: video } %>
    <% end %>
  <% end %>
<% end %>
