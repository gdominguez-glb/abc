<% if @video %>
  $("body").append("<%= escape_javascript(render 'video_modal') %>");
  $(".video-play-modal-<%= @video.id %>").on("hidden.bs.modal", function() {
    $(".video-play-modal-<%= @video.id %>").remove();
  })
  $(".video-play-modal-<%= @video.id %>").modal('show');
  $('.mejs-player').mediaelementplayer();
<% else %>
  alert('Please buy the video first!')
<% end %>
