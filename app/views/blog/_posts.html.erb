<div class="posts">
  <% posts.each do |post| %>
    <div class="post">
      <%# <p><%= post.published_at.strftime('%b %d %Y') rescue nil %1></p> %>
      <h2>
        <% if blog_type == 'global' %>
          <%= link_to post.title, global_post_path(slug: publication.slug, id: post.id) %>
        <% else %>
          <%= link_to post.title, curriculum_post_path(page_slug: group_page.slug, slug: publication.slug, id: post.id) %>
        <% end %>
      </h2>
      <p>
        <%= raw post.preview_content %>
      </p>
      <% if blog_type == 'global' %>
        <%= link_to global_post_path(slug: publication.slug, id: post.id), class: "btn btn-default btn-block-xs margin-bottom-xl" do %>
          Read More <i class="fa fa-chevron-right"></i>
        <% end %>
      <% else %>
        <%= link_to curriculum_post_path(page_slug: group_page.slug, slug: publication.slug, id: post.id), class: "btn btn-default btn-block-xs margin-bottom-xl" do %>
          Read More <i class="fa fa-chevron-right"></i>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <% if posts.count == 0 %>
    <p>Don't have any posts yet here.</p>
  <% end %>
</div>
