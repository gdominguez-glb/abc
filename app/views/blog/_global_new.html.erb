<div class="row">
  <%= render partial: 'blog_header_new', locals: { blog: @blog } %>
</div>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <% if current_spree_user && current_spree_user.subscribe?(@blog) %>
      <span class="btn btn-primary blog-subscribe-btn subscribed pull-right">Subscribed</span>
    <% else %>
      <%= link_to 'Subscribe', subscribe_blog_path(@blog), class: 'btn btn-primary blog-subscribe-btn pull-right', data: { method: :post } if @blog.mailchimp_list_id.present?  %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1 margin-top--xl margin-bottom--xl">
    <div class="posts flex">
      <%= render partial: 'articles', locals: { articles: @articles, blog_type: @blog_type, group_page: @group_page, blog: @blog } %>
    </div>
    <div class="posts-pagination">
      <%= render partial: 'load_more_link_new', locals: { articles: @articles } %>
    </div>
  </div>
</div>
