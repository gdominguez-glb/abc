<% if $flipper[:blog_redesign].enabled? %>
  <%= render 'global_new' %>
<% else %>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 margin-top--xxl margin-bottom--xl">
      <h1><%= @publication_title %></h1>
      <%= render partial: 'blog_header', locals: { medium_publication: @medium_publication } %>
      <div class="posts">
        <%= render partial: 'posts', locals: { posts: @posts, blog_type: @blog_type, group_page: @group_page, publication: @medium_publication } %>
      </div>
      <div class="posts-pagination">
        <%= render partial: 'load_more_link', locals: { posts: @posts } %>
      </div>
    </div>
  </div>
<% end %>
