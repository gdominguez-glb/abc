<% total_files = 2 %>
<%= form_for(@opportunity, html: {multipart: true}) do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <% if @opportunity.errors.any? %>
        <ul>
          <% @opportunity.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-12">
      <label for="">Opportunity ID</label>
      <%= f.text_field :salesforce_id, class: 'form-control', placeholder: "Opportunity ID" %>
    </div>
    <% (1..total_files).each do |number| %>
      <% value = number.to_s %>
      <div class="form-group col-sm-6">
        <span class="btn btn-default btn-block" onclick="FileEvent.simulateClick('#opportunity_attachment_<%= value %>')"><%= value %>. Select file</span>
        <p class="hint">Current file: <span class="opportunity-attachment-<%= value %>">no file chosen</span></p>
        <input class="hide" type="file" name="opportunity[attachments_attributes][][file]" id="opportunity_attachment_<%= value %>" onchange="FileEvent.fillWithName('.opportunity-attachment-<%= value %>', '#opportunity_attachment_<%= value %>')" />
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-success btn-block' %>
  </div>
<% end %>
