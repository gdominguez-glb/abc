<h4>My Products</h4>
<div class="row">
  <% @my_products.each do |product| %>
    <div class="col-md-4">
      <div class="product-wrapper">
        <h4><%= product.name %></h4>
        <% product.taxons.group_by(&:taxonomy).each do |taxonomy, taxons| %>
          <p><%= taxonomy.name %>: <%= taxons.map(&:name).join(', ') %></p>
        <% end %>
        <p class="grades-dropdown">Select grades ...<span class="caret"></span></p>
        <a class="btn btn-default">See Modules</a>
      </div>
    </div>
  <% end %>
</div>
