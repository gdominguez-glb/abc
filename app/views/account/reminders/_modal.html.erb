<div class="modal fade" id="reminder-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <h3>Would your like to send a reminder?</h3>
        <%= form_for @reminder, url: account_reminders_path, remote: true do |f| %>
          <div class="select-container dark-select block">
            <span>Send Reminder To</span>
            <%= f.select :recipient, ReminderForm::RECIPIENT_OPTIONS, {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Content</label>
            <%= f.text_area :content, class: 'form-control', rows: 3 %>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <button class="btn btn-success btn-block margin-bottom-s">Send Reminder</button>
            </div>
            <div class="col-sm-6">
              <button class="btn btn-danger btn-block margin-bottom" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
