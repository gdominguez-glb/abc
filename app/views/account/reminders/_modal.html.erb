<div class="modal fade" id="reminder-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <h3>Would your like to send a reminder?</h3>
        <%= form_for @reminder, url: account_reminders_path, remote: true do |f| %>
          <div class="form-group">
            <label>Send Reminder To</label>
            <%= f.text_field :recipient, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Content</label>
            <%= f.text_area :content, class: 'form-control', rows: 3 %>
          </div>
          <div class="form-group text-center">
            <%= f.submit 'Send Reminder', class: 'btn btn-primary' %>
          </div>
          <div class="form-group text-center">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
