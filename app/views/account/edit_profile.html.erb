<section style="margin: 50px 0;">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h3>Edit Profile</h3>
        <%= form_for(spree_current_user, url: '/account/save_profile') do |f| %>
          <div class="form-group">
            <label>First Name</label>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Last Name</label>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Address</label>
            <%= f.text_field :address, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Interested Subject</label>
            <%= f.text_field :interested_subject, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Interested Grade Level</label>
            <%= f.text_field :interested_grade_level, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Name of school/district</label>
            <%= f.text_field :school_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>heard about GreatMinds/Curriculum Name</label>
            <%= f.text_field :heard_from, class: 'form-control' %>
          </div>
          <%= f.submit 'Save Profile', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
