<% if @coupon_code.blank? %>
  alert('Please enter a valid product key!');
<% elsif !@coupon_code.available? %>
  alert('The product key you enter is not available!');
<% else %>
  $('#enter-code-modal').modal('hide');
  $('body').append("<%= escape_javascript(render 'select_product') %>");
  $('#select-product-modal').modal('show');
  $('#select-product-modal').on('hidden.bs.modal', function (e) {
    $('#select-product-modal').remove();
  });
<% end %>
