<div class="modal fade" tabindex="-1" role="dialog" id="product-terms-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Coupon Redemption</h4>
      </div>
      <%= form_tag activate_product_account_coupon_code_path(@coupon_code.code), remote: true, authenticity_token: true do %>
        <%= hidden_field_tag :product_id, params[:product_id] %>
        <div class="modal-body">
          <h4 class="small">Terms & Conditions</h4>
          <%= simple_format @product.license_text_for_terms %>
        </div>
        <div class="modal-footer text-left">
          <%= submit_tag 'Accept', class: 'btn btn-primary', data: { disable_with: 'Submitting...' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
