<% if @product.has_license_text? %>
  $('#select-product-modal').modal('hide');
  $('body').append("<%= escape_javascript(render 'product_terms') %>");
  $('#product-terms-modal').modal('show');
  $('#product-terms-modal').on('hidden.bs.modal', function (e) {
    $('#product-terms-modal').remove();
  });
<% else %>
  $('#select-product-modal').modal('hide');
  $('body').append("<%= escape_javascript(render 'success_modal') %>");
  $('#success-modal').modal('show');
  $('#success-modal').on('hidden.bs.modal', function (e) {
    $('#success-modal').remove();
  });
<% end %>
