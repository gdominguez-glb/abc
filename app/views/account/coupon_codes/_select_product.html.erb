<div class="modal fade" tabindex="-1" role="dialog" id="select-product-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Coupon Code Redemption</h4>
      </div>
      <%= form_tag activate_product_account_coupon_code_path(@coupon_code.code), remote: true, authenticity_token: true do %>
        <div class="modal-body">
          <label>Please select the product you wish to redeem...</label>
          <ul>
            <% @coupon_code.products.each do |product| %>
              <li>
                <label>
                  <%= radio_button_tag :product_id, product.id %>
                  <%= product.name %> <%= product.grades.map(&:name).join(' ') %>
                </label>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="modal-footer">
          <%= submit_tag 'Select', class: 'btn btn-primary', data: { disable_with: 'Submitting...' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
