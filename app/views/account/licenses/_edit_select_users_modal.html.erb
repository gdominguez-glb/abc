<div class="modal fade" tabindex="-1" role="dialog" id="edit-select-users-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title">Edit selected users</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12 margin-bottom-l">
            <a class='btn btn-default' id="add-new-users-btn">Add New Users +</a>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="edit-users-email-list">
              <% @emails.each do |email| %>

                <p><span class="email-selection"><%= email %></span> <span class='remove-select-email' data-toggle="tooltip" data-placement="top" title="Remove User"><i class='mi'>close</i></span></p>
              <% end %>
            </div>
          </div>
        </div>

        <hr />

        <div class="row">
          <div class="col-md-6">
            <button type="button" class="btn btn-danger btn-block margin-bottom-s" data-dismiss="modal">Cancel</button>
          </div>
          <div class="col-md-6">
            <button type="button" class="btn btn-success btn-block margin-bottom" id="confirm-edit-select-users-btn">Confirm</button>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>

<%= javascript_tag do %>
  $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
  });
<% end %>
