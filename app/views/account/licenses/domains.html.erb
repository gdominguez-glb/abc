<% content_for :body_class, "licenses" %>

<%= render partial: 'tabs', locals: { tab: 'automatic' } %>

<div class="row">
  <%= form_for @domain do |f| %>
    <div class="form-row">
      <div class="col">
        <div class="form-group">
          <label for="domain_product" class="sans-serif">Select product to assign</label>
          <%= f.select :product, @products, {}, class: 'form-control' %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label for="domain_name" class="sans-serif">Domain</label>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    </div>
    <%= f.submit 'Add', class: 'btn btn-success' %>
  <% end %>

  <div class="table-responsive js-user-table">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Product</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @domains.each do |domain| %>
          <tr>
            <td><%= domain.name rescue nil %></td>
            <td><%= domain.product.name rescue nil %></td>
            <td>
              <%= link_to 'X', domain_path(domain), class: 'btn btn-danger', data: { confirm: 'Are you sure?', method: :delete } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
