<div class="modal fade" id="edit-user-licenses-modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <%= render partial: 'stats' %>
        <h2 class='text-center'>Edit <b><%= @user.full_name %></b> licenses...</h2>
      </div>
      <div class="modal-body">
        <p class='text-center'>Add or remove licenses for <%= @user.full_name %></p>
        <%= form_tag update_user_licenses_account_licenses_path(user_id: @user.id), remote: true do %>
          <div class="row">
            <div class="col-sm-6">
              <p><strong>Product Licensed</strong></p>
            </div>
            <div class="col-sm-6">
              <p><strong>Number of Licenses</strong></p>
            </div>
          </div>

          <% @product_distributions.each do |distribution| %>
            <div class="row margin-bottom-l">
              <div class="col-sm-6"><%= distribution.product.name %></div>
              <div class="col-sm-6"><%= text_field_tag "product_distributions[#{distribution.id}][quantity]", distribution.quantity, class: 'distribution-quantity form-control' %></div>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-3 col-md-offset-3">
              <button class="btn btn-success btn-block margin-bottom-s">
                Save Updates
              </button>
            </div>
            <div class="col-md-3">
              <button class="btn btn-danger btn-block margin-bottom">
                Cancel
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
