<div class="product-stats-wrapper">
  <h6>
    Your Licenses for:
    <% product = current_spree_user.managed_products.first %>
    <% if current_spree_user.managed_products.count > 1 %>
      <%= select_tag :product_id, options_from_collection_for_select(current_spree_user.managed_products, :id, :name), class: 'licenses-select form-control inline-input' %>
    <% else %>
      <%= product.name %>
    <% end %>
  </h6>
  <%= render partial: 'product_stats', locals: { product: product } %>
</div>
