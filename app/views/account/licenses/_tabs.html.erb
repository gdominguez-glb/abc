<% tab ||= 'licenses' %>
<div class="row">
  <div class="col-sm-6">
    <ul class="nav nav-tabs margin-bottom--l" id="settings-tabs">
      <li role="presentation" class="<%= 'active' if tab == 'licenses' %>"><a href="/account/licenses">Licenses</a></li>
      <li role="presentation" class="<%= 'active' if tab == 'users' %>"><a href="/account/licenses/users">User Management</a></li>
    </ul>
  </div>
  <% if tab == 'licenses' %>
    <div class="col-xs-4 col-xs-offset-8 col-sm-3 col-md-2 col-sm-offset-3 col-md-offset-4 text-right">
      <a href="/" class="btn btn-sm btn-primary margin-top--sm-min margin-bottom--m btn-block js-get-licenses-tour">
        Tour
      </a>
    </div>
  <% end %>
  <% if tab == 'users' %>
    <div class="col-sm-6 text-right">
      <form action="" class="form">
        <div class="row">
          <div class="col-xs-6 col-md-3 col-md-offset-3">
            <a href="/" class="btn btn-sm btn-primary margin-top--sm-min margin-bottom--m btn-block js-get-licenses-users-tour">
              Tour
            </a>
          </div>
          <div class="col-xs-6">
            <div class="form-group">
              <%= text_field_tag :query, params[:query], class: 'form-control form-control-sm margin-top--sm-min', placeholder: 'Search Users' %>
            </div>
          </div>
        </div>
      </form>
    </div>
  <% end %>
</div>
<hr class="margin-top--reset" />
