<div class="modal collapse in" tabindex="-1" role="dialog" id="delete-free-product-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Delete <%= @product.name %></h4>
      </div>
      <%= form_tag account_remove_free_product_path(id: @product.id), remote: true, authenticity_token: true do  %>
        <div class="modal-body">
          <p>Are you sure you would like to delete this free product?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" aria-label="Close">Cancel</button>
          <%= submit_tag "Yes", class: 'btn btn-primary', data: { disable_with: 'Deleting...' } %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
