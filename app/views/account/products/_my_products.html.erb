<% @my_products.each do |product| %>
  <% if product.parts.exists? %>
    <% product.parts.each do |product| %>
      <%= render partial: 'product_item', locals: { product: product } %>
    <% end %>
  <% else %>
    <%= render partial: 'product_item', locals: { product: product } %>
  <% end %>
<% end %>
