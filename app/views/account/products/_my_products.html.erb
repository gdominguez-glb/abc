<% @my_products.each do |product| %>
  <div class="col-md-4">
    <div class="product-wrapper">
      <h4><%= product.name %></h4>
      <% product.taxons.group_by(&:taxonomy).each do |taxonomy, taxons| %>
        <p><%= taxonomy.name %>: <%= taxons.map(&:name).join(', ') %></p>
      <% end %>
      <% if product.downloadable? && product.download_pages.present? %>
        <%= link_to 'Launch App', download_page_path(product.download_pages.first.slug), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
<% end %>
