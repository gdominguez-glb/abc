<div class="container container-content">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="clearfix">
        <%= form_tag '', method: :get, id: 'bookmarks-filter-form' do %>
          <span class="title pull-left">Bookmarks</span>
          <%# <div class="dropdown pull-right"> %>
          <%#   Sort by: %>
          <%#   <%= select_tag :taxonomy_id, options_from_collection_for_select(@taxonomies, :id, :name, params[:taxonomy_id]), include_blank: 'All', class: 'form-control' %1> %>
          <%# </div> %>
        <% end %>
      </div>
      <div class="row">
        <% @bookmarks.each do |bookmark| %>
          <div class="col-md-4">
            <%= link_to account_bookmark_path(bookmark), data: { method: :delete } do %>
              <span class="glyphicon glyphicon-star-empty"></span>
            <% end %>
            <% if bookmark.bookmarkable.is_a?(Spree::Video) %>
              <%= render partial: 'video', locals: { video: bookmark.bookmarkable } %>
            <% elsif bookmark.bookmarkable.is_a?(Spree::Material) %>
              <%= render partial: 'material', locals: { material: bookmark.bookmarkable } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
