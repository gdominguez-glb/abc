<%= content_for :javascripts do %>
  <%= javascript_tag do %>
    $(function(){
      var supports = ['Order Support', 'Parent Support', 'Content/Implementation Support', 'Technical Support'];

      function requireDescription() {
        var topic = $('input[name="contact_form[topic]"]').val();
        var supportType = $('select[name="contact_form[support_type]"]').val()
        if (topic == 'General' || topic == 'Professional Development') {
          return true;
        }

        if (topic == 'Support' && (supports.indexOf(supportType) != -1) ) {
          return true;
        }
        return false;
      }

      function requireFormat() {
        console.log('require format')
        var topic = $('input[name="contact_form[topic]"]').val();
        var supportType = $('select[name="contact_form[support_type]"]').val()

        if (topic == 'Support' && supportType == 'Content Error') {
          return true;
        }
        return false;
      }

      $(".contact-form").validate({
        rules: {
          'contact_form[topic]': 'required',
          'contact_form[first_name]': 'required',
          'contact_form[last_name]': 'required',
          'contact_form[email]': 'required',
          'contact_form[phone]': 'required',
          'contact_form[description]': {
            required: function() {
              return requireDescription();
            }
          },
          'contact_form[format]': {
            required: function() {
              return requireFormat();
            }
          }
        }
      });

      var dependentFields = [
        "Items purchased  (optional)",
        "Curriculum",
        "Description",
        "Curriculum",
        "Format",
        "Country",
        "State",
        "Curriculum",
        "Grade",
        "School or District Size",
        "Title 1",
        "Returning Customer",
        "Desired Dates",
        "Desired Training topic",
        "Grade bands",
        "Size of Training Groups",
        "Interested in hosting events"
      ];

      var topicFieldMapping = {
        'Print or Bulk Orders': [
          { name: 'Country' },
          { name: 'State' },
          { name: 'Curriculum' },
          { name: 'Grade' },
          { name: 'School or District Size' },
          { name: 'Title 1' },
          { name: 'Returning Customer' }
        ],
        'General': [
          { name: 'Description', required: true }
        ],
        'Sales and Purchasing': [
          { name: 'Country' },
          { name: 'State' },
          { name: 'Curriculum' },
          { name: 'Title 1' },
          { name: 'Returning Customer' },
          { name: 'Description' },
        ],
        'Professional Development': [
          { name: 'Desired Dates' },
          { name: 'Desired Training topic' },
          { name: 'Grade bands' },
          { name: 'Size of Training Groups' },
          { name: 'Interested in hosting events' },
          { name: 'Description', required: true }
        ]
      }

      var supportFieldMapping = {
        "Order Support": [
          { name: "Items purchased" },
          { name: "Curriculum" },
          { name: "Description" }
        ],
        "Parent Support": [
          { name: "Curriculum" },
          { name: "Description" }
        ],
        "Content/Implementation Support": [
          { name: "Curriculum" },
          { name: "Description" }
        ],
        "Content Error": [
          { name: "Curriculum" },
          { name: "Format" }
        ],
        "Technical Support":[
          { name: "Description" }
        ]
      };

      var topicDropdown = $('#topicDropdown');
      var topicDropdownLinks = topicDropdown.find('.dropdown-menu a');

      topicDropdownLinks.on('click', function(e) {
        e.preventDefault();

        var topic = $(this).text();
        var mapping = topicFieldMapping[topic];

        $('#contact_form_topic').val(topic);

        $('.dependent-field').addClass('hidden');
        $(this).addClass('selected');
        topicDropdown.find('.btn').html(topic + ' <span class="caret"></span>');

        if (mapping) {
          toggleDependentFields(mapping);
          return;
        }
        if (topic == 'Support') {
          $("[data-name='Support Type']").removeClass('hidden');
        } else {
          $("[data-name='Support Type']").addClass('hidden');
        }
      });

      $('select[name="contact_form[support_type]"]').change(function(e){
        $('.dependent-field').not('[data-name="Support Type"]').addClass('hidden');
        var value = $(this).val();
        if(value) {
          var mapping = supportFieldMapping[value];
          toggleDependentFields(mapping);
        }
      });

      function toggleDependentFields(mapping) {
        _.each(mapping, function(m, i){
          $('[data-name="'+m.name+'"]').removeClass('hidden');
        });
      }

      $('input[type="submit"]').click(function(e){
        var topic = $("input[name='contact_form[topic]'").val();
        if (!topic) {
          e.preventDefault();
          alert('Please select topic first!');
          return false;
        }
      });

      $('input[name="contact_form[desired_dates]"]').datetimepicker({format: 'YYYY-MM-DD'});
    });
  <% end %>
<% end %>
