<div class="row">
  <div class="col-sm-10 col-sm-offset-1 margin-top-xl margin-bottom-xl">
    <p><%= link_to 'Back to dashboard', account_products_path %></p>
    <% @library_leafs.each do |library_leaf| %>
      <div>
        <h4><%= library_leaf.name %></h4>

        <div class="row">
          <% library_leaf.library_items.each do |library_item| %>
            <div class="col-md-4">
              <div>
                <%= image_tag library_item.cover.url %>
              </div>
              <h5><%= library_item.name %></h5>
              <p>
                <% if library_item.inkling? %>
                  <%= link_to 'Launch', launch_item_library_path(@product, item_id: library_item.id), remote: true %>
                <% elsif library_item.pdf? %>
                  <%= link_to 'Download', download_item_library_path(@product, item_id: library_item.id), target: '_blank' %>
                <% end %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
