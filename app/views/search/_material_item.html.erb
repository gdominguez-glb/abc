<div class="search-result-item">
  <div class="row">
    <div class="col-md-2">
      <div class="result-item-icon">
        <span class="glyphicon glyphicon-book"></span>
      </div>
    </div>
    <div class="col-md-8">
      <div class="result-item-center">
        <span class="title"><%= item.name %></span>
      </div>
    </div>
    <div class="col-md-2">
      <div class="result-item-links">
        <% link = material_link(item) %>
        <%= link_to 'View Item', link.html_safe, class: 'btn btn-primary' if link %>
      </div>
    </div>
  </div>
</div>
