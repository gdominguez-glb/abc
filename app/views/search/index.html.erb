<div class="row padding-top-xl padding-bottom-xl">
  <div class="col-sm-10 col-sm-offset-1">

      <div class="row margin-bottom">
        <div class="col-sm-6">
          <span class="block margin-top">Search results for <strong><%= params[:query] %></strong></span>
        </div>
        <div class="col-sm-6">
          <div class="dropdown pull-right-sm">
            Sort by:
            <button class="btn btn-default dropdown-toggle margin-right-reset" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
              All
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Action</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Another action</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Something else here</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>
            </ul>
          </div>
        </div>
      </div>

    <div class="list-group">
      <% @result.each do |item| %>
        <%= render partial: search_result_partial(item), locals: { item: item } %>
      <% end %>
    </div>
  </div>
</div>
