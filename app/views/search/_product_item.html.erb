<div class="search-result-item">
  <div class="row">
    <div class="col-md-2">
      <div class="result-itme-icon">
        <span class="glyphicon glyphicon-download-alt"></span>
      </div>
    </div>
    <div class="col-md-8">
      <div class="result-item-center">
        <span class="title"><%= item.name %></span>
        <%# <span class="sub-title">Favorite</span> %>
        <p><%= truncate item.description, length: 300 %></p>
      </div>
    </div>
    <div class="col-md-2">
      <div class="result-item-links">
        <%= link_to 'View Item', spree.product_url(item), class: 'btn btn-primary' %>
        <% if item.free? && item.downloadable? %>
          <span>Or</span>
          <%= link_to 'Download Now', item.downloadable_url, class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
