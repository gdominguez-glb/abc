<%= render 'cms_nav' %>

<div class="col-md-9">
  <h2>Footer Links of <%= @footer_title.title %></h2>
  <%= link_to 'New Footer Link', new_cms_footer_title_footer_link_path, class: 'btn btn-primary' %>
  <table class='table table-responsive table-striped table-hover' id="footer-links-list">
    <thead>
      <tr>
        <th>Name</th>
        <th>Link</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @footer_links.each do |footer_link| %>
        <tr data-id="<%= footer_link.id %>">
          <td><%= footer_link.name %></td>
          <td><%= footer_link.link %></td>
          <td>
            <%= link_to 'Edit', edit_cms_footer_title_footer_link_path(@footer_title, footer_link), class: 'btn btn-default btn-sm' %>
          </td>
          <td>
            <%= link_to 'Delete', cms_footer_title_footer_link_path(@footer_title, footer_link), class: 'btn btn-default btn-sm', data: { confirm: 'Are you sure?', method: :delete } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= content_for :javascripts do %>
  <%= javascript_tag do %>
    function updatePositions() {
      var data = {}
      $.each($("#footer-links-list tbody tr"), function(index, element) {
        data[$(element).attr('data-id')] = index;
      });
      $.ajax({
        url: '/cms/footer_titles/<%= @footer_title.id %>/footer_links/update_positions',
        type: 'POST',
        data: { positions: data }
      })
    }
    $(function(){
      $("#footer-links-list").sortable({
        containerSelector: 'table',
        itemPath: '> tbody',
        itemSelector: 'tr',
        placeholder: '<tr class="placeholder"/>',
        onDrop: function  (item, container, _super) {
          _super(item);
          updatePositions();
        }
      })
    });
  <% end %>
<% end %>
