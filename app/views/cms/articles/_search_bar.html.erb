<div class="panel panel-primary">
  <div class="panel-body panel-body--padding">
    <div class="row">
      <div class="col-lg-6">
        <ul class="nav nav-tabs margin-bottom-s--lg-min">
          <li>
            <%= link_to 'Published', published_cms_blog_articles_path(@blog), class: (selected_state == 'published' ? 'active' : '') %>
          </li>
          <li>
            <%= link_to 'Drafts', drafts_cms_blog_articles_path(@blog), class: (selected_state == 'drafts' ? 'active' : '') %>
          </li>
          <li>
            <%= link_to 'Archived', archived_cms_blog_articles_path(@blog), class: (selected_state == 'archived' ? 'active' : '') %>
          </li>
        </ul>
      </div>
      <div class="col-lg-6 text-right">
        <div class="form-inline">
          <%= link_to 'New Post', new_cms_blog_article_path(@blog), class: 'btn btn-success btn-block-xs' %>
        </div>
      </div>
    </div>
  </div>
</div>
