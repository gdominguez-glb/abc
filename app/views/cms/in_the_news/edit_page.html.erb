<%= render 'cms_nav' %>

<div class="col-md-9">
  <%= form_for(@page, url: save_page_cms_in_the_news_path, class: 'form', method: :post) do |f| %>
    <% if @page.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@page.errors.count, "error") %> prohibited this object from being saved:</h2>

        <ul>
          <% @page.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="panel panel-primary">
      <div class="panel-heading padding-top--s padding-bottom--s">
        <h3 class="panel-title panel-title--s">In the news</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label>Title</label>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label>Jumbotron Image field</label>
              <%= text_field "page[data]", "jumbotron_image", class: 'form-control', value: @page.data.try(:[], :jumbotron_image) %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label>Short description</label>
              <%= text_field "page[data]", "short_description", class: 'form-control', value: @page.data.try(:[], :short_description) %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label>Slug</label>
              <%= f.text_field :slug, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= f.submit class: 'btn btn-success btn-block-xs' %>
<% end %>
</div>
