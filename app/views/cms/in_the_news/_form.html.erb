<%= form_for([:cms, @in_the_new], class: 'form') do |f| %>
  <% if @in_the_new.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@in_the_new.errors.count, "error") %> prohibited this object from being saved:</h2>

      <ul>
      <% @in_the_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-primary">
    <div class="panel-heading padding-top--s padding-bottom--s">
      <h3 class="panel-title panel-title--s">In the news</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Author</label>
            <%= f.text_field :author, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Publisher</label>
            <%= f.text_field :publisher, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>External Url</label>
            <%= f.text_field :call_to_action_button_link, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :article_date %>
            <%= f.text_field :article_date, class: 'form-control datetime-picker' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <label>Image URL</label>
            <%= f.text_field :image_url, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-12">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'rich-editor' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <label>Stick to Top</label>
            <%= f.check_box :stick_to_top, class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= f.submit class: 'btn btn-success btn-block-xs' %>
<% end %>

<script type="text/javascript" charset="utf-8">
  var datetime_pickers = $('.datetime-picker');

  datetime_pickers.datetimepicker({
    format: 'YYYY-MM-DD HH:mm:ss',
  });
</script>
