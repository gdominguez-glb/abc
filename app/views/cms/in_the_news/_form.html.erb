<%= form_for([:cms, @in_the_new], class: 'form') do |f| %>
  <% if @in_the_new.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@in_the_new.errors.count, "error") %> prohibited this object from being saved:</h2>

      <ul>
      <% @in_the_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="panel panel-primary">
    <div class="panel-heading padding-top--s padding-bottom--s">
      <h3 class="panel-title panel-title--s">Recommendation</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Author</label>
            <%= f.text_field :author, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Publisher</label>
            <%= f.text_field :publisher, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="form-group">
            <label>Slug</label>
            <%= f.text_field :slug, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Call to action button text</label>
            <%= f.text_field :call_to_action_button_text, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Call to action button link</label>
            <%= f.text_field :call_to_action_button_link, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Button Target</label>
            <div class="select-container dark-select block">
              <span>Select Target</span>
              <%= f.select :call_to_action_button_target, options_for_select([['Open in Same Tab', '_self'],['Open in New Tab', '_blank']]), { prompt: 'Select target' }, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :article_date %>
            <%= f.text_field :article_date, class: 'form-control datetime-picker' %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label>Image URL</label>
        <%= f.text_field :image_url, class: 'form-control' %>
      </div>
    </div>
  </div>

  <%= f.submit class: 'btn btn-success btn-block-xs' %>

<% end %>

<script type="text/javascript" charset="utf-8">
  var datetime_pickers = $('.datetime-picker');

  datetime_pickers.datetimepicker({
    format: 'YYYY-MM-DD HH:mm:ss',
  });
</script>
