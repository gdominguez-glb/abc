<%= render 'cms_nav' %>


<div class="col-md-9">
  <h2>Event training headers for <%= @training_type_category.title %> </h2>
  <%= link_to 'New sub header', new_cms_training_type_category_event_training_header_path(@training_type_category), class: 'btn btn-primary margin-bottom--xl' %>
  <div class="table-responsive">
    <table class="table table-hover event-trainings-list">
      <thead>
        <tr>
          <th>Title</th>
          <th>Position</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @event_training_headers.each do |event_training_header| %>
          <tr data-id="<%= event_training_header.id %>">
            <td><%= event_training_header.name %></td>
            <td><%= event_training_header.position %></td>
            <td><%= link_to 'Edit', edit_cms_training_type_category_event_training_header_path(@training_type_category, event_training_header) %></td>
            <td><%= link_to 'Destroy', [:cms, @training_type_category, event_training_header], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text--danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'Back to session types', cms_training_type_category_event_trainings_path(@training_type_category), class: 'btn btn-primary' %>
</div>
