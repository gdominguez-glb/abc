<%= form_for([:cms, @popup], class: 'form') do |f| %>
  <% if @popup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@popup.errors.count, "error") %> prohibited this popup from being saved:</h2>

      <ul>
      <% @popup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-primary">
    <div class="panel-heading padding-top--s padding-bottom--s">
      <h3 class="panel-title panel-title--s">Popup</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Slug</label>
            <%= f.text_field :slug, class: 'form-control' %>
            <p class="hint">Popup will show up in the selected slug</p>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Button Link</label>
            <%= f.text_field :button_link, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Button Text</label>
            <%= f.text_field :button_text, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Color Text</label>
            <%= f.text_field :text_color, class: 'form-control' %>
            <p class="hint">i.e., #FF000</p>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Background color</label>
            <%= f.text_field :background_color, class: 'form-control' %>
            <p class="hint">i.e., #FF000</p>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :starts_at %>
            <%= f.text_field :starts_at, class: 'form-control datetime-picker' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :expires_at %>
            <%= f.text_field :expires_at, class: 'form-control datetime-picker' %>
            <p class="hint">Won't display if expired.</p>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label "Body" %>
            <%= f.text_area :body, class: "form-control rich-editor" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= f.submit class: 'btn btn-success btn-block-xs' %>
<% end %>

<%= render 'shared/datetime_pickeable' %>
