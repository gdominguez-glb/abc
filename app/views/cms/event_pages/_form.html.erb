<%= form_for([:cms, @event_page], class: 'form') do |f| %>
  <% if @event_page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_page.errors.count, "error") %> prohibited this event_page from being saved:</h2>

      <ul>
      <% @event_page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <%# <div class="form-group"> %>
  <%#   <%= f.label 'Unique url' %1> %>
  <%#   <%= f.text_field :slug, class: 'form-control' %1> %>
  <%#   <p class="help-block">For example: if enter 'math-events' and this event page belong to math curriculum, it will be visited under /math/events </p> %>
  <%# </div> %>
  <div class="form-group">
    <%= f.label :regonline_filter %>
    <%= f.text_field :regonline_filter, class: 'form-control' %>
    <p class="help-block">This field is mapping to Internal Code(open event edit, under Registration Rules section, click Advanced Setting) in regonline event to assocaite events with related curriculum. if this field is entered as 'Math' and in regonline event ClientEventID has value 'Math,..', this event will be displayed in this events list</p>
  </div>
  <div class="form-group">
    <%= f.label "Curriculum Page" %>
    <%= f.collection_select :page_id, Page.show_in_top_navigation, :id, :group_name, { prompt: true }, class: 'form-control' %>
    <p class="help-block">For example: if enter 'math-events' and this event page belong to math curriculum, it will be visited under /math/events </p>
  </div>
  <div class="form-group">
    <%= f.label :display %>
    <%= f.check_box :display, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
