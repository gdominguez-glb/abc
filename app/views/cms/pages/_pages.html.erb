<div class="table-responsive">
  <table class='table table-striped table-hover'>
    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.draft_status %></td>
          <td><%= link_to 'Edit Detail', edit_cms_page_path(page) %></td>
          <td><%= link_to 'Destroy', [:cms, page], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text--danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @pages %>
