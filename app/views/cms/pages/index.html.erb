<%= render 'cms_nav' %>

<div class="col-md-9">
  <h2>Page Lists</h2>
  <%= link_to 'Create new page', new_cms_page_path, class: 'btn btn-primary' %>
  <p id="notice"><%= notice %></p>
  <div class="table-responsive">
    <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Unique Url</th>
        <th>Curriculum</th>
        <th>Group name</th>
        <th>Sub group name</th>
        <th>Position</th>
        <th>Visible</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.slug %></td>
          <td><%= page.curriculum.try(:name) %></td>
          <td><%= page.group_name %></td>
          <td><%= page.sub_group_name %></td>
          <td><%= page.position %></td>
          <td><%= page.visible %></td>
          <td><%= link_to 'Show', [:cms, page] %></td>
          <td><%= link_to 'Edit', edit_cms_page_path(page) %></td>
          <td><%= link_to 'Editor', product_marketing_editor_cms_page_path(page) %></td>
          <td><%= link_to 'Destroy', [:cms, page], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <%= paginate @pages %>
</div>
