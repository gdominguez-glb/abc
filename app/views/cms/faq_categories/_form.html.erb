<%= form_for [:cms, @faq_category], class: 'form' do |f| %>
  <div class="panel panel-primary">
    <div class="panel-heading padding-top--s padding-bottom--s">
      <h3 class="panel-title panel-title--s">FAQ </h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="name">Name</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="checkbox margin-bottom--xl">
        <label>
          <%= f.check_box :display %> Visible
        </label>
      </div>
    </div>
  </div>
  <%= f.submit class: 'btn btn-success btn-block-xs' %>
<% end %>
