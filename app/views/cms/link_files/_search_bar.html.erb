<div class="panel panel-primary">
  <div class="panel-body panel-body--padding">
    <div class="row">
      <div class="col-lg-12 text-right">
        <div class="form-inline">
          <a href="/cms/link_files/new" class="btn btn-success btn-block-xs margin-right--reset margin-bottom--s--sm-min">Upload New File</a>
          <%= search_form_for @q, url: '', class: 'inline' do |f| %>
            <div class="form-group margin-bottom--reset">
              <%= f.text_field :file_file_name_cont, class: 'form-control margin-bottom--s--sm-min', placeholder: 'Search File name' %>
              <%= submit_tag 'Search', class: 'btn btn-primary btn-block-xs margin-bottom--s--sm-min margin-right--reset' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
