<%= render 'cms_nav' %>

<div class="col-md-9">
  <h2>Careers</h2>
  <%= link_to 'New Career', new_cms_job_path, class: 'btn btn-primary margin-bottom-xl' %>
  <div class="table-responsive">
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Display</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td><%= job.title %></td>
            <td><%= job.display %></td>
            <td>
              <%= link_to 'Edit', edit_cms_job_path(job), class: 'btn btn-default' %>
              <%= link_to 'Delete', cms_job_path(job), class: 'btn btn-danger', data: { confirm: 'Are you sure?', method: :delete } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
