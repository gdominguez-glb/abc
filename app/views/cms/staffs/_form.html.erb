<%= form_for [:cms, @staff], class: 'form' do |f| %>
  <% if @staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@staff.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @staff.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-primary">
    <div class="panel-heading padding-top--s padding-bottom--s">
      <h3 class="panel-title panel-title--s">Staff</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="name">Name</label>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Staff Type</label>
            <div class="select-container dark-select block">
              <span>Staff Type</span>
              <%= f.select :staff_type, Staff.staff_types.keys, {}, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label>Picture</label>
        <%= f.file_field :picture %>
      </div>
      <div class="form-group">
        <label>Bio</label>
        <%= f.text_area :description, class: 'form-control rich-editor', rows: 3 %>
      </div>
      <div class="form-group">
        <div class="checkbox">
          <label for="name">
            <%= f.check_box :display %> Display
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <%= f.submit class: 'btn btn-success btn-block' %>
    </div>
  </div>
<% end %>
