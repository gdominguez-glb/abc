<%= form_for [:cms, @staff], class: 'form' do |f| %>
  <div class="form-group">
    <label for="name">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Staff Type</label>
    <%= f.select :staff_type, Staff.staff_types.keys, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Picture</label>
    <%= f.file_field :picture %>
  </div>
  <div class="form-group">
    <label>Bio</label>
    <%= f.text_area :description, class: 'form-control cleditor', rows: 3 %>
  </div>
  <div class="form-group">
    <label for="name">Display</label>
    <%= f.check_box :display, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
