<div class="row">
  <div class="col-sm-10 col-sm-offset-1 margin-bottom-xl">

    <div class="page-header">
      <h2>Professional Development Sessions</h2>
    </div>

    <% @event_trainings.each do |event_training| %>
      <div class="panel panel-default panel-collapsible" id="event<%= event_training.title %>">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapse<%= event_training.title.gsub(/[^0-9A-Za-z]/, '') %>"><%= event_training.title %></a>
          </h4>
        </div>
        <div id="collapse<%= event_training.title.gsub(/[^0-9A-Za-z]/, '') %>" class="panel-collapse collapse padding-top padding-left padding-right">
          <p>
             <%= event_training.content.html_safe rescue nil %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
