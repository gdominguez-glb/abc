<div class="group-products">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 margin-top-xxl margin-bottom-l">
        <h2 class="text-center"><%= @product_group.name %></h2>
        <p class="text-left-sm"><%= @product_group.description.html_safe rescue '' %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 margin-bottom-xl">
        <div class="row">
          <% @products.each do |product| %>
            <%= render partial: 'spree/shared/product', locals: { product: product } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render partial: 'spree/shared/partner_modal' %>
