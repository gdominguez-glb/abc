<div class="group-products">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="text-center"><%= @product_group.name %></h2>
      <p class="text-left--sm-min"><%= @product_group.description.html_safe rescue '' %></p>
      <div class="row">
        <% @products.each do |product| %>
          <% if $flipper[:store_redesign].enabled? %>
            <div class="col-md-4">
              <%= render partial: 'spree/shared/product', locals: { product: product } %>
            </div>
          <% else %>
            <%= render partial: 'spree/shared/product', locals: { product: product } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render partial: 'spree/shared/partner_modal' %>
