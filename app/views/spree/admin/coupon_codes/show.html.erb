<% content_for :page_title do %>
  Coupon Code / <%= @coupon_code.code  %>
<% end %>

<h4>Products from this coupon code: </h4>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @licenses_with_quantity.each do |license| %>
      <tr>
        <td><%= license.product.name %></td>
        <td><%= link_to license.product_quantity, breakdown_admin_coupon_code_path(@coupon_code, product_id: license.product_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

