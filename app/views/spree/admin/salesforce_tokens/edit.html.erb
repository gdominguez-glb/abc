<% content_for :page_title do %>
  Salesforce Token Settings
<% end %>

<% content_for :page_actions do %>
  <div class="row">
    <div class="col-md-6 col-md-offset-6">
      <%= link_to_with_icon 'envelope', 'Test Token', test_token_admin_salesforce_token_path,
        method: :post, title: 'Test Salesforce Connection', class: 'send_mail btn btn-default btn-block' %>
    </div>
  </div>
<% end %>

<%= form_tag admin_salesforce_token_path, method: :put do |f| %>
  <fieldset>
    <%= render 'form', f: f %>
    <div class="form-actions actions" data-hook="buttons"><%= button Spree.t('actions.update'), 'update' %></div>
  </fieldset>
<% end %>
