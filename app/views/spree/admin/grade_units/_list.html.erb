<table class="table sortable" id='listing_grade_units' data-hook  data-hook  data-sortable-link="<%= update_positions_admin_grade_grade_units_url(@grade) %>">
  <thead>
    <tr data-hook="grades_header">
      <th class="no-border"></th>
      <th><%= Spree.t(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @grade_units.each do |grade_unit| %>
      <tr id="<%= spree_dom_id grade_unit %>" data-hook="grade_units_row">
        <td class="move-handle">
          <span class="icon icon-sort handle"></span>
        </td>
        <td><%= grade_unit.name %></td>
        <td class="actions actions-2 text-right">
          <%= link_to_edit grade_unit.id, no_text: true %>
          <%= link_to_delete grade_unit, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
