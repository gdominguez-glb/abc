<% content_for :page_title do %>
  <%= link_to @grade.name, admin_grade_grade_units_path(@grade) %> / <%= Spree.t(:edit_grade_unit) %>
<% end %>

<%= form_for [:admin, @grade, @grade_unit] do |f| %>
  <fieldset>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t(:update), 'save' %>
    </div>
  </fieldset>
<% end %>
