<li class="list-group-item" data-material-id="<%= material.id %>">
  <%= material.name %>
  <%= link_to 'Bulk Add', bulk_modal_admin_product_materials_path(material.product, parent_id: material.id), class: 'btn btn-default btn-sm', remote: true %>
  <%= link_to 'Add Material', new_admin_product_material_path(material.product, parent_id: material.id), class: 'btn btn-default btn-sm', remote: true %>
  <%= link_to 'Edit', edit_admin_product_material_path(material.product, material), class: 'btn btn-default btn-sm', remote: true %>
  <%= link_to 'Delete', admin_product_material_path(material.product, material), class: 'btn btn-default btn-sm', data: { confirm: 'Are you sure?', method: :delete } %>
  <%= link_to 'Files', admin_material_material_files_path(material), class: 'btn btn-default btn-sm', remote: true %>
  <% if material.children.count > 0 %>
    <ul class="list-group" style="margint-top: 10px;">
      <% material.children.each do |sub_material| %>
        <%= render partial: 'material_item', locals: { material: sub_material } %>
      <% end %>
    </ul>
  <% end %>
</li>
