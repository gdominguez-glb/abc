<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Files for <%= @library_leaf.name %></h4>
    </div>
    <div class="modal-body">
      <%= form_for([:admin, @library_leaf.product, @library_leaf, @library_item], remote: true) do |f| %>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label>Choose Image to upload</label>
          <%= f.file_field :cover %>
        </div>
        <div class="form-group">
          <label>Type</label>
          <%= f.select :item_type, options_for_select(['inkling', 'pdf'], f.object.item_type), {}, class: 'form-control' %>
        </div>
        <div class="form-group inkling-code-wraper">
          <label>Inkling Code</label>
          <%= f.text_area :inkling_code, class: 'form-control' %>
        </div>
        <div class="form-group pdf-wraper hide">
          <label>Choose Pdf to upload</label>
          <%= f.file_field :attachment %>
        </div>
        <%= f.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Uploading' } %>
      <% end %>
      <div class="table-responsive">
        <table class="table" style="min-width: 100%;">
          <thead>
            <tr>
              <th>Name</th>
              <th>Type</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @library_items.each do |library_item| %>
              <% next if library_item.new_record? %>
              <tr>
                <td><%= library_item.name %> </td>
                <td><%= library_item.item_type %></td>
                <td>
                  <%= link_to 'Delete', spree.admin_product_library_leaf_library_item_path(@library_leaf.product, @library_leaf, library_item), class: 'btn btn-default btn-sm', data: { confirm: 'Are you sure?', method: :delete } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
