<%= form_for([:admin, @flipbook_leaf.product, @flipbook_leaf, @flipbook_item], remote: true) do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Choose Image to upload</label>
    <%= f.file_field :cover %>
  </div>
  <% @flipbook_item.item_type ||= 'issuu' %>
  <div class="form-group">
    <label>Type</label>
    <%= f.select :item_type, options_for_select(['issuu', 'pdf'], f.object.item_type), {}, class: 'form-control' %>
  </div>
  <div class="form-group inkling-code-wraper <%= 'hide' if !@flipbook_item.issuu? %>">
    <label>Issuu Code</label>
    <%= f.text_area :issuu_code, class: 'form-control' %>
  </div>
  <div class="form-group pdf-wraper  <%= 'hide' if !@flipbook_item.pdf? %>"">
    <label>Choose Pdf to upload</label>
    <%= f.file_field :attachment %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Uploading' } %>
<% end %>
