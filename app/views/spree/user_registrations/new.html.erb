<% @body_id = 'signup' %>
<div class="col-md-8 col-md-offset-2">
  <div id="signup-form-heading">
    <h2>Create an Account</h2>
  </div>
  <div id="new-customer" data-hook="login" class="margin-top--reset">
    <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
    <%= form_for resource, :as => :spree_user, :url => '/store/signup' do |f| %>
      <div data-hook="signup_inside_form">
        <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
        <div class="row">
          <div class="col-md-8 col-md-offset-2 form-group" style="text-align: center;">
            <%= render "shared/google_recaptcha" %>
          </div>
          <div class="col-md-6 col-md-offset-3">
            <%= f.submit Spree.t(:create), :class => 'btn btn-lg btn-success btn-block margin-bottom--s', :id => 'btnCreate' %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="text-center">
      <%= Spree.t(:or) %>
      <%= link_to Spree.t(:login_as_existing), spree.login_path %>
    </div>
    <div data-hook="login_extras"></div>
  </div>
</div>
