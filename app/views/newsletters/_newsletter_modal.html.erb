<div class="modal fade" id="newsletter-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Newsletter and Updates</h4>
      </div>
      <%= form_for @newsletter, remote: true do |f| %>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>First Name</label>
                <%= f.text_field :first_name, class: 'form-control' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Last Name</label>
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label>Email</label>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div>
            <label>Lists to subscribe</label>
            <p>
              <% Mailchimp::LISTS.each do |list_name, list_id| %>
                <label><%= f.check_box :lists, { multiple: true, include_hidden: false }, list_id %>   <%= list_name %></label>
              <% end %>
            </p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Subscribe", class: 'btn btn-primary', data: { disable_with: 'Submitting...' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
