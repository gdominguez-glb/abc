<ul class="dropdown-menu">
  <li><%= active_link_to page.title, "/#{page.slug}" %></li>
  <% page.sub_pages.each do |sub_page| %>
    <li><%= active_link_to sub_page.title, "/#{sub_page.slug}" %></li>
  <% end %>
  <% if page && publication = page.medium_publications.sorted.first %>
    <%= active_link_to 'Blog', curriculum_blog_path(page_slug: page.slug, slug: publication.slug), wrap_tag: :li, active: /#{page.slug}\/blog/ %>
  <% end %>
  <% if page && event_page = page.event_page %>
    <%= active_link_to 'Events', page_events_path(page_slug: page.slug), wrap_tag: :li, active: /#{page.slug}\/events/ %>
  <% end %>
</ul>
