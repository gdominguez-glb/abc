  <div class="container">
    <div class="row clear-top">
      <div class="col-sm-2 footer-section">
        <div class="row">
          <div class="col-sm-4">
            <a href="">
              <i class="fa fa-facebook social-icon"></i>
            </a>
          </div>
          <div class="col-sm-4">
            <a href="">
              <i class="fa fa-twitter social-icon"></i>
