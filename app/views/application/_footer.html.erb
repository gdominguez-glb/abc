<footer class="container footer">
  <div class="row">
    <div class="col-sm-1"></div>
    <% FooterTitle.all.each do |footer_title| %>
      <div class="col-sm-2 footer-section">
        <h6 class="section-lead">
          <% if footer_title.link.present? %>
            <%= link_to footer_title.title, footer_title.link %>
          <% else %>
            <%= footer_title.title %>
          <% end %>
        </h6>
        <ul>
          <% footer_title.footer_links.each do |link| %>
            <li>
              <%= link_to link.name, link.link %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-sm-2 footer-section">
      <h6 class="section-lead">
        News
      </h6>
      <ul>
        <% MediumPublication.global.each do |blog| %>
          <li>
            <%= link_to blog.title, main_app.global_blog_path(slug: blog.slug) %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-2 footer-section">
      <h6 class="section-lead">Connect</h6>
      <ul>
        <li>
          <a href="https://www.facebook.com/greatminds.net" target="_blank">
            <%= material_icon.share.css_class('social-icon') %> Facebook
          </a>
        </li>
        <li>
          <a href="/contact">
            <%= material_icon.person.css_class('social-icon') %> Contact
          </a>
        </li>
        <li>
          <%= link_to main_app.newsletters_path, remote: true do %>
            <%= material_icon.mail.css_class('social-icon') %> Newsletter
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <hr />
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <p class="attribution"><span class="copyright">Copyright &copy; 2015 Great Minds</span> | <a href="/terms-of-service">TOS</a> | <a href="">Privacy Policy</a></p>
    </div>
  </div>
</footer>
