<% if !@sub_nav_items.blank? %>
  <nav class="navbar navbar-default navbar-fixed-top subnav">
    <div class="container">
      <div class="navbar-header">
        <span class="subnav-name pull-left hidden"><%= @page.title %></span>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sub-nav">
          <span class="sr-only">Toggle sub navigation</span>
          <span class="glyphicon glyphicon-menu-hamburger"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="sub-nav">
        <ul class="nav navbar-nav">
          <%= active_link_to @page.title, "/#{@page.slug}", wrap_tag: :li %>
          <% @sub_nav_items.each do |page| %>
            <%= active_link_to page.title, "/#{page.slug}", wrap_tag: :li %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
