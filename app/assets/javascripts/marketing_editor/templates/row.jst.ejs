<div class="tile-row clearfix" style="margin: 10px 0; border: 1px solid #eee; padding: 5px;">
  <div class="head">
    <%= data.rowType %>
    <a class="btn btn-default pull-right remove-row-btn">X</a>
  </div>
  <div class="form">
    <% for(var i=0; i<fields.length; i++) {%>
      <div class="form-group">
        <label><%= fields[i].label %></label>
        <% if(fields[i].input_type == 'text') { %>
          <input type="text" class="form-control title-input" data-name="<%= fields[i].name %>" value="<%= data[fields[i].name] %>"/>
        <% } %>
        <% if(fields[i].input_type == 'text_area') { %>
          <textarea data-name="<%= fields[i].name %>" rows="3" class="form-control"><%= data[fields[i].name]%></textarea>
        <% } %>
      </div>
    <% } %>
  </div>
</div>
