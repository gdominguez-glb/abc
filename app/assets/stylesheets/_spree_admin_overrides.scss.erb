// *************************************
//
//   Spree Admin
//   -> Styles scoped to Spree Admin
//
// *************************************

// -------------------------------------
//   Bar above Spree admin
// -------------------------------------

.spree-navbar {
  margin: 0 -15px;
  border: 0;
  border-bottom: 1px solid $gray-light-mid;
  border-radius: 0;

  .navbar-header {
    float: none;
    padding: $b-space-m;

    @media screen and (min-width: $screen-md-min) {
      padding: $b-space-m 0;
    }
  }

  .navbar-brand {
    display: none;
  }

  div[data-hook="admin_login_navigation_bar"] {
    @media screen and (max-width: 769px) {
      float: right;
    }
  }

  &.navbar-inverse {
    border-color: darken($gray-lightest, 20%);
    background: $gray-lightest;

    .navbar-toggle {

      &:hover {
        background: $gray-lightest;
      }

      .icon-bar {
        background: $gray-dark;
      }
    }
  }
}

// -------------------------------------
//   Scoped to admin body
// -------------------------------------

.admin {
  background-color: $c-absolute;

  .dropdown {
    &.user-menu {
      a {
        color: $gray-dark !important;
      }

      &.open {
        .dropdown-toggle {
          background: transparent;
        }
      }
    }
  }

  table {
    min-width: 1000px;
    max-width: none;
  }

  .nav-stacked {
    li + li {
      margin-top: $b-space-s;
    }
  }

  [id="payment-methods"] {
    margin-left: 0;
  }

  // -------------------------------------
  //   Orders
  // -------------------------------------

  .index-filter-button {
    .form-control {
      margin-left: -1px;
      padding: 8px $b-space;
    }

    .btn {

      &:focus {
        border-color: $brand-primary;
        background-color: transparent;

        &:hover {
          color: $brand-primary;

          .icon {
            color: $brand-primary;
          }
        }
      }

      &:hover {
        .icon {
          color: $c-absolute;
        }
      }
    }

    .icon {
      color: $brand-primary;
    }
  }

  .filter-well {
    .form-group {
      margin-bottom: 0;
    }

    .input-group {
      margin-bottom: $b-space;
    }
  }

  .with-sidebar {

    table {
      min-width: 0;
    }

    @media screen and (max-width: $large-bp) {
      float: none;
      width: 100%;

      + div {
        float: none;
        width: 100%;
      }
    }
  }
}

// -------------------------------------
//   Sidebar
// -------------------------------------

#wrapper {

  #main-sidebar {
    position: relative;
    top: 0;
    padding: $b-space-m 12px;
    border: 0;
    background: transparent;

    &.hidden-xs {
      display: block !important;
    }

    .icon {
      position: relative;
      top: -5px;
      font-size: 16px;

      @media screen and (min-width: $screen-sm-min) {
        top: -8px;
      }
    }

    .icon-chevron-left,
    .icon-chevron-down {
      position: absolute;
      top: 1px;
      right: 6px;
      margin-top: 0;
      font-size: 16px;
      color: $brand-primary;
    }

    .icon-chevron-left {
      @include rotate(-90deg);
    }

    .icon-chevron-down {
      @include rotate(-180deg);

      top: 4px;
      right: $b-space;
    }

    .nav-sidebar {
      margin: 0;
    }

    li {
      margin-bottom: $b-space-s;
      border: 1px solid $brand-primary;
      border-radius: 3px;

      > a {
        padding: $b-space-s $b-space;
        font-size: 13px;
        font-weight: bold;
        letter-spacing: normal;
        color: $brand-primary;
        border-radius: 3px;

        &[data-toggle="collapse"] {
          padding-right: 25px;
        }
      }
    }

    .nav-pills {
      border-radius: 3px;

      li {
        margin: 0;
        margin-bottom: -1px;
        border: 1px solid #ddd;
        border-radius: 0;

        &:last-child {
          margin-bottom: 0;
          border: 0;
        }

        > a {
          margin: 0;
          padding: $b-space $b-space-m;
          border: 0;
          font-size: 14px;
          font-weight: normal;
        }

        &.active.active {
          border-color: $brand-primary;

          > a {
            color: $c-absolute;
            border-radius: 0;
          }
        }
      }
    }
  }

  &.sidebar-minimized {

    #main-sidebar {
      width: 0;
      overflow: hidden;
    }
  }
}

// -------------------------------------
//   Primary Content
// -------------------------------------

#main-part {

  &.sidebar-collapsed {
    padding-left: $b-space-m;
  }
}

// -------------------------------------
//   Analytics
// -------------------------------------

.order-dot,
.user-dot,
.contact-dot {
  width: $b-space;
  height: $b-space;
  margin-top: $b-space-m;
  margin-right: $b-space;
  border-radius: $b-space-s;
}

.order-dot {
  background-color: #35AAE2;
}

.user-dot {
  background-color: #FD5F3F;
}

.contact-dot {
  background-color: #98C53D;
}

.ui-datepicker {
  max-width: 300px;
}

.ui-datepicker-calendar.ui-datepicker-calendar {
  min-width: initial;
}

// -------------------------------------
//   Filters
// -------------------------------------

.label-completed,
.label-complete,
.label-considered_safe,
.label-paid,
.label-shipped,
.label-ready,
.label-active,
.label-success,
.label-sold,
.label-balance_due {
  a {
    color: $brand-primary !important;
  }
}

.icon-filter.icon-filter.icon-filter {
  position: absolute;
  top: 38%;
  left: -7px;
  color: $gray-light;
}

// Ensure filters stay attached to their cell
.table.table {
  tbody {
    tr {
      td {
        position: relative;
      }
    }
  }
}

// -------------------------------------
//   Forms
// -------------------------------------

.checkbox {
  input[type="checkbox"] {
    top: 2px;
  }
}

.radio {
  input[type="radio"] {
    top: 2px;
  }
}

// -------------------------------------
//   Select 2
// -------------------------------------

.select2-container {
  display: block;
}

.select2-choice.select2-choice {
  height: 39px;
  border: 1px solid $dark-blue;
}

.select2-arrow.select2-arrow.select2-arrow {
  border-left: 1px solid $dark-blue;

  [role="presentation"] {
    background-position-y: $b-space-s;
  }
}

.select2-drop.select2-drop {
  margin-top: -1px;
  border: 1px solid $c-depleted;
}

.select2-drop-active.select2-drop-active.select2-drop-active {
  border: 1px solid $dark-blue;
}

.select2-result-label.select2-result-label.select2-result-label {
  color: $c-depleted;
}

// ----- Search Select2 ----- //

.select2-choices.select2-choices {
  height: 39px !important;
  border: 1px solid $dark-blue;
  border-radius: 3px;
}

.select2-search-choice.select2-search-choice.select2-search-choice {
  margin-top: 8px;
}

.select2-search-choice-close.select2-search-choice-close.select2-search-choice-close.select2-search-choice-close {
  top: 4px;
  color: $dark-blue !important;
}
