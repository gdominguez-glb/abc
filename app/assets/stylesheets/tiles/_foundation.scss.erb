.blue-bg {
  color: $c-absolute;
  background: $c-positive-secondary;
}

.cream-bg {
  color: $c-positive-secondary;
  background: $gray-yellow;

  &.image-bg {
    color: $c-absolute;
  }
}

.green-bg {
  color: $c-positive-secondary;
  background: $c-balanced;

  &.image-bg {
    color: $c-absolute;
  }
}

.light-blue-bg {
  color: $c-positive-secondary;
  background: $c-positive-primary;

  &.image-bg {
    color: $c-absolute;
  }
}

.orange-bg {
  color: $c-positive-secondary;
  background: $c-energized-primary;

  &.image-bg {
    color: $c-absolute;
  }
}

.coral-bg {
  color: $c-absolute;
  background: $c-energized-secondary;
}
