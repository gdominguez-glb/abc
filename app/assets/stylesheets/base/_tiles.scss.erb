// _foundation.scss
// Tile styling _foundation

.blue-bg {
  color: $c-absolute;
  background: $c-positive-secondary;
}

.cream-bg {
  color: $c-positive-secondary;
  background: $c-firm-subdue;

  &.image-bg {
    color: $c-absolute;
  }
}

.green-bg {
  color: $c-positive-secondary;
  background: $c-balanced;

  &.image-bg {
    color: $c-absolute;
  }
}

.light-blue-bg {
  color: $c-positive-secondary;
  background: $c-positive-primary;

  &.image-bg {
    color: $c-absolute;
  }
}

.orange-bg {
  color: $c-positive-secondary;
  background: $c-energized-primary;

  &.image-bg {
    color: $c-absolute;
  }
}

.coral-bg {
  color: $c-absolute;
  background: $c-energized-secondary;
}

// -------------------------------------
//   Images
// -------------------------------------

.img-shadow {
  box-shadow: 0 0 7px 0 $c-transparent-subdue-1 !important;
}

.img-book {
  box-shadow: 0 0 7px 0 $c-transparent-subdue-1 !important;
  border-top-right-radius: 12px !important;
  border-bottom-right-radius: 12px !important;
}

.post-image {
  max-width: 100% !important;
}
