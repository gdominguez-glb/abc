// *************************************
//
//   Config
//   App-Wide Varibles
//
// *************************************

// -------------------------------------
//   Colors
// -------------------------------------

// ----- Palette ----- //

$black:                           #000;
$white:                           #fff;

// Greens
$brand-green:                     #ccff63;
$math:                            $brand-green;

// Blues
$dark-blue:                       #07212d; //$navy
$light-blue:                      #e2e7e9; //$snow
$steel-gray:                      #46565c; //$steel
$english:                         #7cc7f1;

// Purples
$light-plum:                      #f4f4f4; //notlightplum

// Oranges
$coral:                           #ff5b34;
$history:                         #ff8c00;

// Grays
$gray-darker:                     #222;
$gray-dark:                       #333;
$gray:                            $steel-gray;
$gray-light:                      #aaa;
$gray-light-mid:                  #c5c5c5;
$gray-lighter:                    #eee;
$gray-lightest:                   #f8f8f8;
$gray-yellow:                     #FFFAE5;

// *************************************
//
//   Variable Naming:
//   c-{description}--{modifier}
//
//   'descriptions' include:
//     absolute, stable, positive, calm,
//     balanced, firm, energized, assertive
//
//   'modifiers' include:
//     primary, secondary,
//     accent, highlight, subdue
//
// *************************************

$c-absolute:                      $white;
$c-depleted:                      $black;

$c-positive-primary:              $english;
$c-positive-secondary:            $dark-blue;
$c-positive-accent:               $steel-gray;
$c-positive-highlight:            $light-blue;

$c-balanced:                      $brand-green;

$c-energized-primary:             $history;
$c-energized-secondary:           $coral;

$c-firm-primary:                  $gray-light;
$c-firm-secondary:                $gray-light-mid;
$c-firm-accent:                   $gray-lighter;
$c-firm-highlight:                $gray-lightest;
$c-firm-subdue:                   $gray-yellow;

$c-stable-primary:                $gray;
$c-stable-secondary:              $gray-dark;
$c-stable-subdue:                 $gray-darker;

// ----- Transparent ----- //

$c-transparent-subdue-1:          rgba(0, 0, 0, .1);
$c-transparent-subdue-4:          rgba(0, 0, 0, .4);
$c-transparent-subdue-5:          rgba(0, 0, 0, .5);
$c-transparent-highlight-5:       rgba(255, 255, 255, .5);
$c-transparent-highlight-9:       rgba(255, 255, 255, .9);

// -------------------------------------
//   Bootstrap Variable Overrides
// -------------------------------------

$brand-primary:                   $dark-blue;
$brand-primary-dark:              #1d4a70;
$primary-hover:                   lighten($brand-primary, 20%);

$brand-info:                      #5bc0de;
$brand-success:                   #5cb85c;
$brand-warning:                   #f0ad4e;
$brand-danger:                    $brand-warning;

$border-radius-value:             4px;

$panel-default-text:              $brand-primary;
$panel-default-border:            $brand-primary;
$panel-default-heading-bg:        $light-plum;

$panel-primary-text:              #fff;
$panel-primary-border:            $brand-primary;
$panel-primary-heading-bg:        $brand-primary;

$panel-info-text:                 #000;
$panel-info-border:               darken($gray-lighter, 1%);
$panel-info-heading-bg:           darken($gray-lighter, 1%);

// -------------------------------------
//   Assorted
// -------------------------------------

$popover-outline:                 $coral;
$transition-timing:               .3s;
$large-bp:                        1182px;

// -------------------------------------
//   Sizes
// -------------------------------------

$b-space-s:                       5px;
$b-space:                         10px;
$b-space-m:                       15px;
$b-space-l:                       20px;
$b-space-xl:                      40px;
