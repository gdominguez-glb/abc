// *************************************
//
//   Config
//   App-Wide Varibles
//
// *************************************

// -------------------------------------
//   Colors
// -------------------------------------

// ----- Palette ----- //

$black:                           #000;
$white:                           #fff;

$coral:                           #ff5b34;
$cream:                           #fff;
$dark-blue:                       #07212d;
$light-blue:                      #e2e7e9;
$light-plum:                      #f4f4f4;
$brand-green:                     #ccff63;
$steel-gray:                      #46565c;
$english:                         #7cc7f1;
$history:                         #ff8c00;
$math:                            $brand-green;

// Gray Scale
$gray-darker:                     #222;
$gray-dark:                       #333;
$gray:                            $steel-gray;
$gray-light:                      #aaa;
$gray-light-mid:                  #c5c5c5;
$gray-lighter:                    #eee;
$gray-lightest:                   #f8f8f8;
$gray-yellow:                     #FFFAE5;

// *************************************
//
//   Variable Naming:
//   c-{description}--{modifier}
//
//   'descriptions' include:
//     absolute, stable, positive, calm,
//     balanced, firm, energized, assertive
//
//   'modifiers' include:
//     primary, secondary,
//     accent, highlight, subdue
//
// *************************************

$c-absolute:                      $white;
$c-depleted:                      $black;

// ----- Transparent ----- //

$c-black-transparent-1:           rgba(0, 0, 0, .1);
$c-black-transparent-4:           rgba(0, 0, 0, .4);
$c-black-transparent-5:           rgba(0, 0, 0, .5);

$c-white-transparent-5:           rgba(255, 255, 255, .5);
$c-white-transparent-9:           rgba(255, 255, 255, .9);

// -------------------------------------
//   Bootstrap Variable Overrides
// -------------------------------------

$brand-primary:                   $dark-blue;
$brand-primary-dark:              #1d4a70;
$primary-hover:                   lighten($brand-primary, 20%);

$brand-info:                      #5bc0de;
$brand-success:                   #5cb85c;
$brand-warning:                   #f0ad4e;
$brand-danger:                    $brand-warning;

$border-radius-value:             4px;

$panel-default-text:              $brand-primary;
$panel-default-border:            $brand-primary;
$panel-default-heading-bg:        $light-plum;

$panel-primary-text:              #fff;
$panel-primary-border:            $brand-primary;
$panel-primary-heading-bg:        $brand-primary;

$panel-info-text:                 #000;
$panel-info-border:               darken($gray-lighter, 1%);
$panel-info-heading-bg:           darken($gray-lighter, 1%);

// -------------------------------------
//   Assorted
// -------------------------------------

$popover-outline:                 $coral;
$transition-timing:               .3s;
$large-bp:                        1182px;

// -------------------------------------
//   Sizes
// -------------------------------------

$b-space-s:                       5px;
$b-space:                         10px;
$b-space-m:                       15px;
$b-space-l:                       20px;
$b-space-xl:                      40px;
