// -------------------------------------
//   Font Families
//
//   Styleguide 3.1
// -------------------------------------

@import url(//fonts.googleapis.com/css?family=Karla:400,700|Lora:400,700);

// -------------------------------------
//   Headlines
//
//   Styleguide 3.2
// -------------------------------------

body {
  font-size: 16px;
}

h1 {
  font-size: 2em;
  line-height: 1.7em;

  @media screen and (min-width: $screen-sm-min) {
    font-size: 2.25em;
  }
}

h2 {
  font-size: 1.5em;
  line-height: 1.7em;

  @media screen and (min-width: $screen-sm-min) {
    font-size: 1.75em;
  }
}

h3 {
  font-size: 1.25em;
  line-height: 1.7em;

  @media screen and (min-width: $screen-sm-min) {
    font-size: 1.37em;
  }
}

h4 {
  font-size: 1.12em;
  line-height: 1.6em;

  @media screen and (min-width: $screen-sm-min) {
    font-size: 1.25em;
  }
}

h5 {
  font-size: 1em;
  line-height: 1.6em;

  @media screen and (min-width: $screen-sm-min) {
    font-size: 1.5em;
  }
}

h6 {
  margin-bottom: 5px;
  font-size: .95em;
  line-height: 1.2em;

  @media screen and (min-width: $screen-sm-min) {
    font-size: 1.25em;

    section.row & {
      font-size: 1.125em;
    }
  }
}

h1,
h2,
h3,
h4,
h5,
h6 {
  @extend .sans-serif;

  margin: 0 0 10px;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: .1em;

  section.row & {
    letter-spacing: .2em;
  }
}

h1,
h2,
h3,
h4,
h5,
h6,
p {
  color: inherit;
}

.blog-post-title {
  letter-spacing: normal;
}

// -------------------------------------
//   Body Copy with Links
//
//   Styleguide 3.3
// -------------------------------------

html,
body {
  font: 100% / 1.5;
  font-family: 'Lora', serif;
}

p {
  margin: 0 0 15px;
  line-height: 1.76em;
}

p,
li {
  font-size: .85em;

  @media screen and (min-width: $screen-sm-min) {
    font-size: 1em;
  }
}

table {
  font-family: 'Karla', sans-serif;
  text-align: left;
}

