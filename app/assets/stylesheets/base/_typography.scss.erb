// -------------------------------------
//   Blockquote
//
//   Uses Bootstrap's standard block quote styling
//
//   Styleguide 3.6.1
// -------------------------------------

blockquote {
  footer {
    background: transparent;
  }
}

// -------------------------------------
//   Blockquote with Attribution
//
//   Uses Bootstrap's standard block quote styling
//
//   Styleguide 3.6.2
// -------------------------------------


// -------------------------------------
//   Blockquote with Attribution, Reversed
//
//   Uses Bootstrap's standard block quote styling
//
//   Styleguide 3.6.3
// -------------------------------------

a {
  @extend .sans-serif;
  @include transition(all, .3s);

  font-weight: bold;
  text-transform: uppercase;
  color: inherit;

  &:hover,
  &:active,
  &:focus {
    text-decoration: underline;
    color: lighten($c-positive-secondary, 10%);
  }

  p & {
    @extend .serif;

    text-transform: none;
    text-decoration: underline;
  }

  &.text-normal {
    font-weight: normal;
  }
}

ul,
ol {
  margin: 0;
  padding: 0;

  .container-content & {
    margin: 0 0 $b-space-m $b-space-l;
  }

  li {
    list-style-type: none;

    .container-content & {
      line-height: 2em;
      text-align: left;
      list-style-type: circle;
    }
  }

  &.dropdown-menu,
  &.list-style-none,
  &.select2-choices,
  &.list-group,
  &.nav-tabs,
  &.nav-pills {
    margin: 0;

    li {
      font-size: .95em;
      line-height: 1.5em;
      list-style-type: none;
    }
  }

  &.dropdown-menu {
    margin-top: 2px;
  }
}

hr {
  margin: 30px 0;
  border-top: 1px solid;
  color: inherit;
}

.serif {
  font-family: 'Lora', serif;
}

.sans-serif {
  font-family: 'Karla', sans-serif;
}

.bold {
  font-weight: bold;
}

.light-text {
  color: $c-absolute;
}

.page-header {
  margin: 30px 0 0;
  padding: 0;
  border: 0;
  text-align: center;

  @media screen and (min-width: $screen-xs-min) {
    margin: 64px 0;
  }

  h2 {
    line-height: 1.1em;
  }
}
