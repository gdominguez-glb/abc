// *************************************
//
//   List Groups
//   Bootstrap list group overrides
//
// *************************************

// -------------------------------------
//   Default List Group
//
//   Styleguide 15.0
// -------------------------------------

.list-group-item {

  &.active {
    border-color: $c-positive-secondary;
    background-color: $c-positive-secondary;

    &:hover,
    &:focus {
      border-color: lighten($c-positive-secondary, 5%);
      background-color: lighten($c-positive-secondary, 5%);
    }
  }

  .badge {
    .mi {
      font-size: 16px;
    }
  }
}

// -------------------------------------
//   Linked Items
//
//   Styleguide 15.1
// -------------------------------------

a.list-group-item {
  font-weight: normal;
  text-transform: none;
  color: inherit;

  p {
    @extend .serif;
  }
}

// -------------------------------------
//   Search Items
// -------------------------------------
.search {
  .list-group-item h4 {
    text-transform: none;
    letter-spacing: normal;
  }
}
