.footer {
  padding: 40px 20px;
  font-size: 1em;
  background: $brand-green;

  a {
    font-weight: normal;
    letter-spacing: 2px;
  }

  h6 {
    margin-bottom: 0;
    font-size: 1em;

    a {
      font-weight: bold;
    }
  }

  hr {
    margin-top: 15px;
    color: $gray-light;
    opacity: .4;
  }

}

.footer-section {
  margin: 0 0 30px;
  font-size: .90em;
}

.attribution {
  @media screen and (min-width: $screen-sm-min) {
    font-size: .85em;
    text-align: center;
  }


  a {
    @extend .sans-serif;

    margin: 0 10px;
    text-transform: uppercase;
  }
}

.copyright {
  @extend .sans-serif;

  margin: 0 10px;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.social-icon {
  position: relative;
  bottom: -2px;
  min-width: 15px;
  font-size: 13.68px;
}
