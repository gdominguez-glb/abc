//   Pagination
//   Bootstrap pagination overrides
//
//   Styleguide 10.0
//
// *************************************

// -------------------------------------
//   Pagination Active & Disabled States
//
//   Styleguide 10.1
// -------------------------------------

// -------------------------------------
//   Pagination Sizes
//
//   Styleguide 10.2
// -------------------------------------

.pagination.pagination {
  margin: 0 0 $b-space-l;

  li {
    a {
      color: $dark-blue;

      &:hover,
      &:active,
      &:focus {
        color: lighten($dark-blue, 5%);
      }
    }

    &.active {
      a {
        border-color: $dark-blue;
        color: $c-absolute;
        background-color: $dark-blue;

        &:hover,
        &:active,
        &:focus {
          border-color: lighten($dark-blue, 5%);
          color: $c-absolute;
          background-color: lighten($dark-blue, 5%);
        }
      }
    }
  }

  .prev,
  .next {
    display: none;

    @media screen and (min-width: $screen-sm-min) {
      display: inline;
    }
  }
}
