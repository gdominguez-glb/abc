//   Alerts
//   Bootstrap alert overrides
//
// *************************************

// -------------------------------------
//   Basic Alerts
//
//   Styleguide 8.0
// -------------------------------------

.flash {
  margin-bottom: 0;
}

.alert {
  @include alert-variant(darken($light-blue, 15%), $dark-blue, $dark-blue);

  position: relative;
  margin-bottom: $b-space;

  a {
    @extend .serif;

    text-transform: none;
    text-decoration: underline;
  }

  .home & {
    position: absolute;
    top: 10px;
    width: 100%;
  }

  .close {
    position: absolute;
    top: 5px;
    right: 10px;
    z-index: 1000;
  }
}

.alert-success {
  @include alert-variant($c-balanced, darken($c-balanced, 25%), $dark-blue);
}

.alert-info {
  @include alert-variant(darken($light-blue, 15%), $dark-blue, $dark-blue);
}

.alert-warning {
  @include alert-variant($brand-warning, darken($brand-warning, 25%), $c-absolute);
}

.alert-danger {
  @include alert-variant($brand-danger, darken($brand-danger, 25%), $c-absolute);
}

.alert-fullwidth {
  border: 0;
}
